#!name = Steam令牌获取
#!desc = 提取Steam令牌手机验证器的TOTP密钥\n\n安装插件后，打开手机Steam令牌，如已有验证器，需要先移除。然后点击 [添加验证器] 插件会自动获取TOTP密钥并发送通知，继续验证完成添加。点击通知自动复制并查看。\n\n注：Steam TOTP密钥需要支持的验证器才可以使用。\n\n插件要求：开启【MitM】和【脚本】。
#!author = 鱼塘[https://github.com/yutangbb]
#!homepage = https://github.com/yutangbb/assets/tree/main/Loon
#!icon = https://raw.githubusercontent.com/Koolson/Qure/master/IconSet/Color/Steam.png
#!system = iOS,iPadOS
#!system_version = 15
#!loon_version = 3.2.1(372)
#!tag = 工具,抓包,Steam
#!date = 2025-10-14 02:00:00

[Script]
http-response ^https:\/\/api\.steampowered\.com\/ITwoFactorService\/AddAuthenticator\/v1 script-path=https://raw.githubusercontent.com/yutangbb/assets/main/Loon/script/steam-totp.js, requires-body=true, binary-body-mode=true, timeout=60, tag=Steam令牌获取, img-url=https://raw.githubusercontent.com/Koolson/Qure/master/IconSet/Color/Steam.png

[MitM]
hostname = api.steampowered.com